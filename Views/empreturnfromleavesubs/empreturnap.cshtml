@model IEnumerable<HRworks.Models.empreturnfromleavesub>

@{
    ViewBag.Title = "empreturnap";
}

<h2>return-leave approval</h2>

<input type="submit" value="Approve all" class="btn btn-default" onclick="window.location.href = '@Url.Action("approveall", "empreturnfromleavesubs")'" />
<br/>
<br/>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.master_file.employee_no)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.master_file.employee_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Leave.Start_leave)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Leave.End_leave)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Leave.Return_leave)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.actualreturnleave)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.submitted_by)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.apstatus)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.master_file.employee_no)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.master_file.employee_name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Leave.Start_leave)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Leave.End_leave)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Leave.Return_leave)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.actualreturnleave)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.submitted_by)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.apstatus)
    </td>
    <td>
        <div class="row">
            <div class="col-md-2" style="display: block;">
                <input type="submit" value="Approve" class="btn btn-default" style="color: green;" onclick="window.location.href = '@Url.Action("approve", "empreturnfromleavesubs", new {id = item.Id})'" />
            </div>
            <div class="col-md-8" style="display: block;">
                @using (Html.BeginForm("reject", "empreturnfromleavesubs", new { id = item.Id }))
                {
                    <div class="col-md-3" style="display: block;">
                        <input type="submit" class="btn btn-default" value="Reject" style="color: red;" />
                    </div>
                    <div class="col-md-7" style="display: block;">
                        <p>
                            <input type="text" name="message" required class="form-control" placeholder="comment" />
                        </p>
                    </div>
                }
            </div>
        </div>
    </td>
</tr>
}

</table>
