    <div class="FOT">

        @{
            var leave = 0d;
            if (Model.paysaved.LWOP != null)
            {
                leave = (double)Model.paysaved.LWOP;
            }
            var abs = 0d;
            if (Model.paysaved.Absents != null)
            {
                abs = (double)Model.paysaved.Absents;
            }
            var ldaysf = leave + abs;
            var daysleft = DateTime.DaysInMonth(Model.paysaved.forthemonth.Value.Year, Model.paysaved.forthemonth.Value.Month) - leave - abs - ViewBag.al;
        }
        @if (Model.contract != null)
        {
            double.TryParse(payrolesController.Unprotect(Model.contract.FOT), out a);
            if (ldaysf != 0)
            {
                a = (a * 12 / 365) * (daysleft);
            }
            @a.ToString("#,##0.00")
        }
        else
