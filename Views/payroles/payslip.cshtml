        @{
            var a = 0d;
            var basperh = 0d;
            var basperd = 0d;
            if (Model.contract != null)
            {
                var bas = payrolesController.Unprotect(Model.contract.basic);
                double.TryParse(bas, out var bas1);
                basperh = ((bas1 * 12) / 365) / 8;
                basperd = ((bas1 * 12) / 365);
                @bas1.ToString("#,##0.00")
            }
        }

    </div>
