@model IEnumerable<HRworks.Models.cal_ot>

@{
    ViewBag.Title = "calovertime";
}

<h2>calovertime</h2>

<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
<script src="https://code.jquery.com/jquery-1.12.4.js"></script>
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script>
    $(function () {
        $("#getdate").datepicker({
            altField: "#alternate",
            altFormat: "MM,yy",
            changeMonth: true,
            changeYear: true,
            showOtherMonths: true,
            selectOtherMonths: true,
            showButtonPanel: true,
            dateFormat: "dd M yy"
        });
    });


</script>

@using (Html.BeginForm("calovertime", "payroles"))
{
    <div class="row">
        <div class=" col-md-2">
            <input type="text" name="payrollmonth" id="getdate" class="form-control" @*value="@ViewBag.eddate"*@ />
        </div>
        <div class=" col-md-1">
            <input type="submit" value="search" class="btn btn-default" />
        </div>
    </div>
    <br />

}

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ROT)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HOT)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WOT)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OT_month)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.master_file.employee_name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ROT)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HOT)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WOT)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OT_month)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.master_file.employee_name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
