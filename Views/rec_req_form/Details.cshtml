@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    div.a
    {
        border-style: solid;
        border-color: black;
        border-width: 1px;
        height:30px;
        font-size: 100%;
    }
    div.col-md-2 {
        border-style: solid;
        border-color: black;
        border-width: 1px;
        height: 30px;
        width: 20%;
        font-size: 100%;
    }
    div.c {
        border-style: solid;
        border-color: black;
        border-width: 1px;
        height: 30px;
        width: 25%;
        font-size: 100%;
    }
    div.d {
        border-style: solid;
        border-color: black;
        border-width: 1px;
        height: 30px;
        width: 33.33%;
        font-size: 100%;
    }
    div.col-md-4 {
        border-style: solid;
        border-color: black;
        border-width: 1px;
        height: 30px;
        width: 40%;
        font-size: 100%;
    }
    div.col-md-1 {
        border-style: solid;
        border-color: black;
        border-width: 1px;
        height: 30px;
        width: 15%;
        font-size: 100%;
    }
    div.ab {
        border-style: solid;
        border-color: black;
        border-width: 1px;
        height: 30px;
        width: 20%;
        font-size: 100%;
    }
    div.col-md-3 {
        border-style: solid;
        border-color: black;
        border-width: 1px;
        height: 30px;
        width: 35%;
        font-size: 100%;
    }
    div {
        font-size: 100%;
    }
    @@page {
        margin: 0;
    }
    @@media print {
    footer {
        display: none;
        position: fixed;
        bottom: 0;
    }
    header {
        display: none;
        position: fixed;
        top: 0;
    }
    }
</style>
<div style=" padding: 5%; width: 75%; font-size: 75%">
    <div class="row a" style="border: none;">

    </div>
    <div class="row a" class="row a" style="border: none; height: 100%;text-align: center">
        <h3> RECRUITMENT REQUISITION FORM</h3>
    </div>
    <div class="row a" style="background-color:#27ADE3; color: black">
        1. HIRING DETAILS
    </div>
    <div class="row a">
        <div class="col-md-2 c">
            Proposed Job Title :
        </div>
        <div class="col-md-2 c">
            @Html.DisplayFor(model => model.projobtitle)
        </div>
        <div class="col-md-2 c">
            Department :
        </div>
        <div class="col-md-2 c">
            @Html.DisplayFor(model => model.department)
        </div>

    </div>
    <div class="row a">
        <div class="col-md-2 c">
            Reporting to :
        </div>
        <div class="col-md-2 c">
            @Html.DisplayFor(model => model.reporting_to)
        </div>
        <div class="col-md-2 c">
            Date Required :
        </div>
        <div class="col-md-2 c">

        </div>
    </div>
    <div class="row a">
        <div class="col-md-4" style="background-color: #27ADE3; color: black">
            2. TYPE OF HIRE
        </div>
        <div class="col-md-1">
            Permanent
        </div>
        <div class="col-md-1">
            @{
                var a5 = Model.type_of_hire;
                if (a5 == "Permanent")
                {
                    <img width="30px" height="25px" src="data:image/png;base64," />
                }
            }

        </div>
        <div class="col-md-1">
            Temporary
        </div>
        <div class="col-md-1">
            @{
                var a = Model.type_of_hire;
                if (a == "Temporary")
                {
                    <img width="30px" height="25px" src="data:image/png;base64," />
                }
            }
        </div>
    </div>
    <div class="row a">
        <div class="col-md-4" style="background-color: #27ADE3; color: black">
            3. NEW HIRE (Tick as appropriate)
        </div>
        <div class="col-md-1">
            yes
        </div>
        <div class="col-md-1">
            @{
                if (Model.new_hire)
                {
                    <img width="30px" height="25px" src="data:image/png;base64," />
                }
            }
        </div>
        <div class="col-md-1">
            no
        </div>
        <div class="col-md-1">
            @{
                if (!Model.new_hire)
                {
                    <img width="30px" height="25px" src="data:image/png;base64," />
                }
            }
        </div>
    </div>
    <div class="row a" style="background-color: #27ADE3; color: black">
        4. JUSTIFICATION FOR NEW HIRE : (Please specify the justification)
    </div>
    <div class="row a">
        @Model.justification_NH
    </div>
    <div class="row a">
        <div class="col-md-1">Proposed Salary</div>
        <div class="col-md-3">@Model.proposed_salary</div>
        <div class="col-md-1">Remarks</div>
        <div class="col-md-3"></div>
    </div>
    <div class="row a">
        <div class="col-md-1 " style="background-color: #27ADE3; color: black; font-size: 90%">5. IF REPLACEMENT :</div>
        <div class="col-md-1">Name</div>
        <div class="col-md-2">@Model.replacement_name</div>
        <div class="col-md-1">Gross Salary</div>
        <div class="col-md-3">@Model.gross_salary</div>
    </div>
    <div class="row a" style="background-color: #27ADE3; color: black">
        6. JOB/PERSONNEL SPECIFICATION
    </div>
    <div class="row a">
        <div class="col-md-4">@Model.J_P_specification</div>
        <div class="col-md-2">Age range from:</div>
        <div class="col-md-2">@Model.age_range_from</div>
    </div>
    <div class="row a" style="background-color: #27ADE3; color: black">
        7. EDUCATIONAL QUALIFICATIONS & EXPERIENCE REQUIRED (MINIMUM REQUIREMENT)
    </div>
    <div class="row a">
        @Model.edu_qua_and_ex_required
    </div>
    <div class="row a" style="background-color: #27ADE3; color: black">
        8. ADDITIONAL REQUIREMENTS / JOB RESPONSIBILITIES
    </div>
    <div class="row a">

    </div>
