<script>
    function print() {
        html2canvas(document.getElementById('liqui')).then(function (canvas) {
            var base64image = canvas.toDataURL("image/jpg");
            var newWindow = window.open(base64image, "_blank");
            newWindow.print();
        });
    }
</script>
