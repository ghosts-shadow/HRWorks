    ViewBag.Title = "print";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script>
    document.onkeydown = function (e) {
        if (event.keyCode === 123) {
            return false;
        }
        if (e.ctrlKey && e.keyCode === 'P'.charCodeAt(0)) {
            $('#foot').hide();
            $('#hide').hide();
            $('#prefr').hide();
            $('#foot').hide();
            $('#search').hide();
            return true;
        } else {
            $('#foot').show();
            $('#hide').show();
            $('#prefr').show();
            $('#search').show();
        }
    }
</script>
