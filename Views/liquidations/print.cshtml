@model IEnumerable<HRworks.Models.liquidation>

@{
    ViewBag.Title = "print";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script>
    document.onkeydown = function(e) {
        if (event.keyCode === 123) {
            return false;
        }
        if (e.ctrlKey && e.keyCode === 'P'.charCodeAt(0)) {
            $('#foot').hide();
            $('#pdate').hide();
            $('#prefr').hide();
            $('#foot').hide();
            $('#search').hide();
            return true;
        } else {
            $('#foot').show();
            $('#pdate').show();
            $('#prefr').show();
            $('#search').show();
        }
    }
</script>
<style>
    table { text-align: center; }

    th, td,tr { text-align: center;
        background-color: white;
        color: black;
        border: 1px solid black;
    }
    
    .row {
        -ms-flex-wrap: wrap;
        display: -ms-flexbox;
        display: flex;
        flex-wrap: wrap;
        margin-left: -15px;
        margin-right: -15px;
    }
</style>
<div class="form-horizontal" onclick="total()">
    @using (Html.BeginForm("print", "liquidations", FormMethod.Get, new { id = "form1" }))
    {
        <div>
            <input type="date" name="pdate" id="pdate" />
