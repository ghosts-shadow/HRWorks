        @Html.AntiForgeryToken()

        <div
            class="form-horizontal">
            <h4>insurance</h4>
            <hr/>
            @Html.ValidationSummary(true, "", new {@class = "text-danger"})
            @Html.HiddenFor(model => model.employee_id)

            <div
                class="form-group">
