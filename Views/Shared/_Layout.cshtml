            </button>@Html.ActionLink("HRworks", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav " style="margin-left: 1%; margin-right: 2%">
                @if (Request.IsAuthenticated)
