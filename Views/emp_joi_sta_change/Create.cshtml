<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
<script src="https://code.jquery.com/jquery-1.12.4.js"></script>
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
<script>
    $(function () {
        $("#datepicker").datepicker();
    });
    function boxs(id) {
        if (id == "box") {
            $('#check').show();
            $('#check1').hide();
            $('#check2').hide();
            $('#check3').hide();
            $('#box').hide();
            $('#box1').show();
            $('#box2').show();
            $('#box3').show();
            $('#Action_Taken').val("Recruitment");
        }
        if (id == "box1") {
            $('#check1').show();
            $('#check').hide();
            $('#check2').hide();
            $('#check3').hide();
            $('#box1').hide();
            $('#box').show();
            $('#box2').show();
            $('#box3').show();
            $('#Action_Taken').val("Promotion");
        }
        if (id == "box2") {
            $('#check2').show();
            $('#check1').hide();
            $('#check').hide();
            $('#check3').hide();
            $('#box2').hide();
            $('#box1').show();
            $('#box').show();
            $('#box3').show();
            $('#Action_Taken').val("End of Probation");
        }
        if (id == "box3") {
            $('#check3').show();
            $('#check1').hide();
            $('#check2').hide();
            $('#check').hide();
            $('#box3').hide();
            $('#box1').show();
            $('#box2').show();
            $('#box').show();
            $('#Action_Taken').val("Payroll Adjustment ");
        }
        //            alert("you have selected " + $('#Action_Taken').val());
    }

    function hi() {
        var empid = $("#empname").val();
        $("#datej").val(empid);
        $("#bs").val(empid);
        $("#hra").val(empid);
        $("#tela").val(empid);
        $("#la").val(empid);
        $("#tra").val(empid);
        $("#oa").val(empid);
        $("#tms").val(empid);
        $("#nt").val(empid);
        $("#empno").val(empid);
        var bs = $("#Basic_Salary").val();
        var hra = $("#House_Rent_Allowance").val();
        var tela = $("#Telephone_Allowance").val();
        var cla = $("#Living_Allowance").val();
        var ta = $("#Transportation_Allowance").val();
        var oa = $("#Other_Allowances").val();
        $("#Total_Salary").val(parseInt(bs) +
            parseInt(hra) +
            parseInt(tela) +
            parseInt(cla) +
            parseInt(ta) +
            parseInt(oa));
    }
</script>
